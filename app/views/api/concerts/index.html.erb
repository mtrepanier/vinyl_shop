<%= render "shared/admin_nav" %>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Listing Concerts</div>
  <% if notice %>
    <div class="panel-body">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>Show date</th>
        <th>Venue</th>
        <th>Price</th>
        <th>Sold out</th>
        <th>Is generated?</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @concerts.each do |concert| %>
        <tr>
          <td><%= concert.formated_show_date %></td>
          <td><%= concert.venue.name %></td>
          <td><%= number_to_currency concert.price %></td>
          <td><%= concert.is_sold_out %></td>
          <td><%= concert.is_generated %></td>
          <td><%= link_to 'Show', [:api,concert] %></td>
          <td><%= link_to 'Edit', edit_api_concert_path(concert) %></td>
          <td><%= link_to 'Destroy', [:api,concert], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="panel-footer"><%= link_to 'New Concert', new_api_concert_path %></div>
  
</div>

