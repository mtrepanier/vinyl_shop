<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Listing Artists</div>
  <% if notice %>
    <div class="panel-body">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Spotify artist</th>
        <th>Artist thumbnail url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @artists.each do |artist| %>
        <tr>
          <td><%= artist.name %></td>
          <td><%= artist.spotify_artist_id %></td>
          <td><%= artist.artist_thumbnail_url %></td>
          <td><%= link_to 'Show', [:api, artist] %></td>
          <td><%= link_to 'Edit', edit_api_artist_path(artist) %></td>
          <td><%= link_to 'Destroy', [:api, artist], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="panel-footer"><%= link_to 'New Artist', new_api_artist_path %></div>
  
</div>
